<h1>Edit article</h1>
<%= form_with model: @article, url: article_path(@article), method: :put, data: { turbo: false } do |f| %>
	<% if @article %>
	<p>
		<ul>
		<% @article.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
		</ul>
	</p>
	<% end %>
	<p>
		Title<br>
		<%= f.text_field :title %>
	</p>
	<p>
		Text<br>
		<%= f.text_area :text %>
	</p>
	<p>
		<%= f.submit %>
			
	</p>

<% end %>