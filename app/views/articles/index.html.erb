<h3>Articles list</h3>
<% @articles.each do |a| %>
	<h2>
		Title: <%= a.title %>
	</h2>
	<br>
	<p>
		Text: <%= a.text %>
	</p>
	<br>
	<p>
		Created: <%= a.created_at %>
	</p>
	<%= link_to 'Show', article_path(a) %>
	<%= link_to 'Edit', edit_article_path(a) %>
	<%= link_to 'Destroy', article_path(a), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  }  %>
	<hr>
<% end %>

